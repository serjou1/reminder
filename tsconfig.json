{
  "compilerOptions": {
     "lib": [
        "es5",
        "es6"
     ],
     "target": "es6",
     "module": "commonjs",
     "moduleResolution": "node",
     "rootDir": "./src",
     "outDir": "./build",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "resolveJsonModule": true,
     "esModuleInterop": true,
     "skipLibCheck": true
  },
  "exclude": [
     "node_modules"
  ]
}